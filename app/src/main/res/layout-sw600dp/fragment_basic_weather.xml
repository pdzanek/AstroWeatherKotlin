<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/background_light"
                                             android:id="@+id/constraintLayout">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/pogodny_prezenter"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/current_weather_image"
            android:visibility="invisible"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="5dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:id="@+id/linearLayout3">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="@string/basic_weather"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="38sp" android:id="@+id/labelExtendedWeather"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/city_name"
                android:textSize="34sp" android:id="@+id/labelCityName"
                android:layout_weight="1" android:layout_marginStart="5sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/cityname"
                android:textSize="24sp" android:id="@+id/tvCityName"
                android:layout_weight="1" android:layout_marginStart="5sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/lat_and_long"
                android:textSize="34sp" android:id="@+id/labelLatLong"
                android:layout_weight="1" android:layout_marginStart="5sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="lat and long"
                android:textSize="24sp" android:id="@+id/tvLatLong"
                android:layout_weight="1" android:layout_marginStart="5sp" tools:ignore="HardcodedText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/temperature"
                android:textSize="34sp" android:id="@+id/labelTemperature"
                android:layout_weight="1" android:layout_marginStart="5sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="temperature"
                android:textSize="24sp" android:id="@+id/tvTemperature"
                android:layout_weight="1" android:layout_marginStart="5sp" tools:ignore="HardcodedText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/pressure"
                android:textSize="34sp" android:id="@+id/labelPressure"
                android:layout_weight="1" android:layout_marginStart="5sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="pressure"
                android:textSize="24sp" android:id="@+id/tvPressure"
                android:layout_weight="1" android:layout_marginStart="5sp" tools:ignore="HardcodedText"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>