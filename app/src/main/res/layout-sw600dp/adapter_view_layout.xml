<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="100" android:orientation="vertical" android:layout_marginStart="50dp"
              android:layout_marginEnd="50dp">
    <TextView
            android:text="@string/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvDt_txt" android:layout_weight="1"
            android:textSize="36sp" android:textAlignment="center"/>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="@string/temperature"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/labelTemp" android:layout_weight="1"
                android:textAlignment="textEnd" android:layout_marginStart="0sp" android:layout_marginEnd="4sp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/temperature"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tvTemperature" android:layout_weight="1"
                android:textAlignment="textStart" android:textSize="24sp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="@string/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/labelHumidity" android:layout_weight="1"
                android:textAlignment="textEnd" android:layout_marginStart="0sp" android:layout_marginEnd="4sp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvHumidity" android:layout_weight="1"
                android:textAlignment="textStart" android:textSize="24sp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="@string/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/labelPressure" android:layout_weight="1"
                android:textAlignment="textEnd" android:layout_marginStart="0sp" android:layout_marginEnd="4sp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvPressure" android:layout_weight="1"
                android:textAlignment="textStart" android:textSize="24sp"/>
    </TableRow>
</LinearLayout>